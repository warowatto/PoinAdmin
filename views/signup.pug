		form.form-horizontal(method="post" action="/signup")
			fieldset
				// Form Name
				legend Poin - 업체 회원가입
				// Text input
				.form-group
					label.col-md-4.control-label 업체명
					.col-md-4
						input#fn.form-control.input-md(name="name" type="text" placeholder="업체명" required="")
				// Text input
				.form-group
					label.col-md-4.control-label(for="email") 이메일
					.col-md-4
						input#email.form-control.input-md(name="email" type="text" placeholder="이메일" required="")
				// Text input
				.form-group
					label.col-md-4.control-label 사업자 등록 번호
					.col-md-4
						input#add1.form-control.input-md(name="companyNumber" type="text" placeholder="사업자 등록번호" required="")
				// Text input
				.form-group
					label.col-md-4.control-label 비밀번호
					.col-md-4
						input#add2.form-control.input-md(name="password" type="password" placeholder="비밀번호" required="")
				// Text input
				.form-group
					label.col-md-4.control-label 비밀번호 확인
					.col-md-4
						input#city.form-control.input-md(name="passwordChack" type="password" placeholder="비밀번호 확인" required="")
				// Button
				.form-group
					label.col-md-4.control-label
					.col-md-4
						button#submit.btn.btn-primary 회원가입
